@model SharpCMS.UI.Mvc.Models.Accounts.LogOnModel

@{
    ViewBag.Title = "Вход - ";
}

@section HeaderContent
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
}
<div class="left-page-content"></div>
<div class="right-page-content">
    <div class="form-content">
        <h1>Вход</h1>
        <p>Для входа введите e-mail и пароль. Если вы не зарегистрированы, то можете @Html.ActionLink("сделать это прямо сейчас", "Register").</p>
        
        @using (Html.BeginForm())
        {
            <div class="item-details">
                <div class="item-details-property">
                    <span class="item-details-label">@Html.LabelFor(m => m.Email)</span>
                    @Html.TextBoxFor(m => m.Email, new {style = "width:400px;"})
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "item-details-error" })
                </div>
                <div class="item-details-property">
                    <span class="item-details-label">@Html.LabelFor(m => m.Password)</span>
                    @Html.PasswordFor(m => m.Password, new {style = "width:400px;"})
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "item-details-error" })
                </div>
                <div class="item-details-property">
                    @Html.ValidationSummary(true)
                </div>
                <div class="item-details-property">
                    <input type="submit" value="Войти" />
                </div>
            </div>
        }
    </div>
</div>