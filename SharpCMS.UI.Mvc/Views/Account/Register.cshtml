@using SharpCMS.UI.Mvc.Models.Accounts
@model RegisterModel

@{
    ViewBag.Title = "Регистрация - ";
}

@section HeaderContent
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
<div class="left-page-content"></div>
<div class="right-page-content">
    <div class="form-content">
    	<h1>Регистрация</h1>
        <p>Используйте следующую форму для создания новой учетной записи.</p>
        @using (Html.BeginForm())
        {
            <div class="item-details">
                <div class="item-details-property">
                    <span class="item-details-label">@Html.LabelFor(m => m.Email)</span>
                    @Html.TextBoxFor(m => m.Email, new {style = "width:400px;" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "item-details-error" })
                </div>
                <div class="item-details-property">
                    <span class="item-details-label">@Html.LabelFor(m => m.UserName)</span>
                    @Html.TextBoxFor(m => m.UserName, new {style = "width:400px;" })
                    @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "item-details-error" })
                </div>
                <div class="item-details-property">
                    <span class="item-details-label">@Html.LabelFor(m => m.Password)</span>
                    @Html.PasswordFor(m => m.Password, new {style = "width:400px;" })
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "item-details-error" })
                </div>
                <div class="item-details-property">
                    <span class="item-details-label">@Html.LabelFor(m => m.ConfirmPassword)</span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new {style = "width:400px;" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "item-details-error" })
                </div>
                <div class="item-details-property">
                    @Html.ValidationSummary(true)
                </div>
                <div class="item-details-property">
                    <input type="submit" value="Регистрация" />
                </div>
            </div>
        }
    </div>
</div>